{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "mtga-tauri",
  "version": "2.0.0-beta.1",
  "identifier": "com.mtga.tauri",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm generate",
    "removeUnusedCommands": true
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "MTGA",
        "width": 1200,
        "height": 800,
        "visible": false,
        "backgroundColor": "#fffbeb",
        "resizable": true,
        "fullscreen": false
      },
      {
        "label": "splash",
        "title": "MTGA",
        "width": 1200,
        "height": 800,
        "url": "splashscreen.html",
        "resizable": true,
        "fullscreen": false,
        "backgroundColor": "#fffbeb"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis", "dmg"],
    "resources": {
      "pyembed/python": "./"
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "wix": {
        "language": "zh-CN"
      },
      "nsis": {
        "languages": [
          "SimpChinese"
        ],
        "displayLanguageSelector": true,
        "installerIcon": "icons/icon.ico"
      }
    }
  }
}
